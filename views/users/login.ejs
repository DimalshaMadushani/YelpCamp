<% layout('layouts/boilerplate')%>

     
<div class="container d-flex justify-content-center align-items-center ">
    <div class="card mb-2" style="width: 18rem;">
        <img  crossorigin="anonymous" class="card-img-top" src="https://images.unsplash.com/photo-1492648272180-61e45a8d98a7?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fGNhbXB8ZW58MHx8MHx8fDA%3D" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form action="/login"  method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            
                <button type="submit" class="btn btn-success w-100">Login</button>
            </form>
        </div>
    </div>
</div>


  
 
